{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "lint-staged": "eslint --cache --ext .js,.ts,.tsx . --ignore-path .gitignore",
    "test": "vitest",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "addApp": "turbo gen --name=$1 --type='app'",
    "addPackage": "turbo gen --name=$1 --type='package'"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.2.5",
    "turbo": "latest",
    "typescript": "^5.3.3",
    "vitest": "^1.4.0"
  },
  "packageManager": "pnpm@8.9.0"
}
